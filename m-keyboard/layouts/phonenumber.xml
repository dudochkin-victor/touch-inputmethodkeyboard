        </key>
        <key>
          <binding label="9" secondary_label="wxyz"/>
        </key>
        <key>
          <binding label="0"/>
        </key>
      </row>

      <row>
        <spacer/>

        <key width="x-large">
          <binding label="&#x002A;&#x002B;" cycleset="&#x002A;&#x002B;p" action="cycle"/>
        </key>
        <key width="x-large">
          <binding label="&#x0023;"/>
        </key>
        <key style="special" width="x-large">
          <binding label="" action="backspace"/>
        </key>
      </row>
    </section>
  </layout>

